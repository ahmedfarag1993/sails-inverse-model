{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2016",
        "lib": [
            "es2017", "es2015", "dom", "es6"
        ],
        "module": "commonjs",
        "outDir": "./lib",
        "sourceMap": false,
        "strict": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "preserveConstEnums": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "declaration": true
    },
    "include": [
        "src/**/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}